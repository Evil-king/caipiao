<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.caipiao.dao.NoticeMapper" >
  <resultMap id="RM_Notice" type="com.caipiao.pojo.Notice" >
    <id column="ID" property="id" jdbcType="INTEGER"/>
    <result column="TITLE" property="title" jdbcType="VARCHAR" />
    <result column="DETAIL" property="detail" jdbcType="VARCHAR" />
    <result column="MESSAGE" property="message" jdbcType="VARCHAR" />
    <result column="USER_ID" property="userId" jdbcType="INTEGER" />
  </resultMap>
  
  <select id="queryByParameter" resultMap="RM_Notice" parameterType="com.caipiao.pojo.Notice" >
    select ID,TITLE,DETAIL,MESSAGE,USER_ID from notice
    where USER_ID = #{userId}
  </select>
  
  <select id="queryByUserId" resultMap="RM_Notice" parameterType="java.lang.Integer" >
    select ID,TITLE,DETAIL,MESSAGE,USER_ID from notice
    where USER_ID = #{userId}
  </select>
  
  
  <insert id="insert" parameterType="com.caipiao.pojo.Notice" >
    insert into notice (
   	   ID, 
   	  TITLE,
   	  DETAIL, 
      MESSAGE, 
      USER_ID
      )
    values (
      #{id}, 
      #{title}, 
      #{detail}, 
      #{message}, 
      #{userId}
      )
  </insert>
  
  <update id="updateByParameter" parameterType="com.caipiao.pojo.Notice" >
    update notice set 
    	  <if test="title != null and title !='' ">TITLE = #{title}</if>
    	  <if test="detail != null and detail != ''">,DETAIL = #{detail}</if>
      <if test="message != null and message !='' ">,MESSAGE = #{message}</if>
    where USER_ID = #{userId}
  </update>
</mapper>